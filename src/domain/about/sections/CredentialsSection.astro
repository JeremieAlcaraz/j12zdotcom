---
import Badge from '@/ui/atoms/Badge.astro'
import Checkbox from '@/ui/atoms/Checkbox.astro'
import { markdownify } from '@/utils/textConverter'
import { getEntry } from 'astro:content'

const aboutEntry = await getEntry('about', 'index')
if (!aboutEntry) {
  throw new Error('About entry not found! Check src/content/about/index.mdx')
}

const { credentials } = aboutEntry.data
---

<section class="section-sm">
  <div class="container">
    <div class="mx-auto max-w-6xl">
      <!-- Header centrÃ© avec badges -->
      <div class="mb-12 text-center lg:mb-16">
        <div class="relative inline-block">
          <h2 class="text-3xl font-bold leading-tight text-base-content md:text-4xl lg:text-5xl">
            {credentials.title}
          </h2>
          <!-- Floating badges autour du titre -->
          <div class="absolute -top-4 -left-8 hidden md:block">
            <Badge label="âœ¨ Reconnu" variant="primary" />
          </div>
          <div class="absolute -top-4 -right-8 hidden md:block">
            <Badge label="ðŸ† CertifiÃ©" variant="secondary" />
          </div>
        </div>

        <p class="mt-6 text-lg text-base-content/70 max-w-3xl mx-auto" set:html={markdownify(credentials.description)}>
        </p>
      </div>

      <!-- Grid des accomplissements -->
      <div class="grid grid-cols-1 lg:grid-cols-3 gap-8 mb-12">
        {credentials.accomplishments.map((accomplishment) => (
          <div class={`group relative p-8 rounded-2xl bg-gradient-to-br from-${accomplishment.badgeVariant === 'primary' ? 'primary' : accomplishment.badgeVariant === 'secondary' ? 'secondary' : 'accent'}/10 to-${accomplishment.badgeVariant === 'primary' ? 'primary' : accomplishment.badgeVariant === 'secondary' ? 'secondary' : 'accent'}/5 border border-${accomplishment.badgeVariant === 'primary' ? 'primary' : accomplishment.badgeVariant === 'secondary' ? 'secondary' : 'accent'}/20 hover:border-${accomplishment.badgeVariant === 'primary' ? 'primary' : accomplishment.badgeVariant === 'secondary' ? 'secondary' : 'accent'}/30 transition-all duration-300 hover:scale-105`}>
            <div class="absolute -top-3 -right-3">
              <Badge label={accomplishment.badge} variant={accomplishment.badgeVariant} />
            </div>

            <div class="text-center space-y-4">
              <div class="text-4xl">{accomplishment.icon}</div>
              <h3 class={`text-xl font-bold text-${accomplishment.badgeVariant === 'primary' ? 'primary' : accomplishment.badgeVariant === 'secondary' ? 'secondary' : 'accent'}`}>{accomplishment.title}</h3>
              <p class="text-base-content/80 text-sm" set:html={markdownify(accomplishment.description)}>
              </p>
              <div class="flex justify-center">
                {accomplishment.action ? (
                  <a
                    href={accomplishment.action.url}
                    target="_blank"
                    rel="noopener"
                    class={`btn btn-sm btn-${accomplishment.badgeVariant === 'primary' ? 'primary' : accomplishment.badgeVariant === 'secondary' ? 'secondary' : 'accent'}`}
                  >
                    {accomplishment.action.label}
                  </a>
                ) : (
                  <Checkbox checked disabled color={accomplishment.badgeVariant === 'primary' ? 'primary' : accomplishment.badgeVariant === 'secondary' ? 'secondary' : 'accent'} size="sm" />
                )}
              </div>
            </div>
          </div>
        ))}
      </div>

      <!-- Statistiques impressionnantes -->
      <div class="mb-12">
        <h3 class="text-2xl font-bold text-center mb-8 text-base-content">
          {credentials.statistics.title}
        </h3>

        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
          {credentials.statistics.items.map((stat) => (
            <div class="text-center p-6 rounded-xl bg-base-200/50 backdrop-blur-sm">
              <div class={`text-3xl font-bold text-${stat.color} mb-2`}>{stat.value}</div>
              <div class="text-sm text-base-content/70">{stat.label}</div>
            </div>
          ))}
        </div>
      </div>

      <!-- CompÃ©tences spÃ©cialisÃ©es -->
      <div class="mb-12">
        <h3 class="text-2xl font-bold text-center mb-8 text-base-content">
          Mes super-pouvoirs ðŸ’ª
        </h3>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
          <div class="space-y-4">
            <h4 class="font-semibold text-lg text-base-content mb-4">{credentials.skills.technical.title}</h4>

            <div class="space-y-3">
              {credentials.skills.technical.items.map((skill) => (
                <div class="flex items-center space-x-3">
                  <Checkbox checked disabled color={skill.color} size="sm" />
                  <span class="text-base-content/80">{skill.label}</span>
                </div>
              ))}
            </div>
          </div>

          <div class="space-y-4">
            <h4 class="font-semibold text-lg text-base-content mb-4">{credentials.skills.human.title}</h4>

            <div class="space-y-3">
              {credentials.skills.human.items.map((skill) => (
                <div class="flex items-center space-x-3">
                  <Checkbox checked disabled color={skill.color} size="sm" />
                  <span class="text-base-content/80">{skill.label}</span>
                </div>
              ))}
            </div>
          </div>
        </div>
      </div>

      <!-- Certifications et formations -->
      <div class="relative">
        <div class="rounded-2xl bg-gradient-to-r from-primary/5 via-secondary/5 to-accent/5 px-8 py-12 backdrop-blur-sm border border-primary/10 md:px-12 md:py-16 lg:px-16 lg:py-20">
          <div class="text-center space-y-6">
            <h3 class="text-2xl font-bold text-base-content">
              {credentials.continuousLearning.title}
            </h3>

            <p class="text-base-content/80 max-w-2xl mx-auto leading-relaxed" set:html={markdownify(credentials.continuousLearning.description)}>
            </p>

            <div class="flex flex-wrap justify-center gap-3 mt-6">
              {credentials.continuousLearning.badges.map((badge) => (
                <Badge label={badge.label} variant={badge.variant} />
              ))}
            </div>

            <!-- Quote inspirante -->
            <div class="mt-8 p-6 rounded-xl bg-base-200/30">
              <blockquote class="text-base italic text-base-content/80">
                "{credentials.continuousLearning.quote.text}"
              </blockquote>
              <footer class="mt-3 text-sm text-base-content/60">
                â€” {credentials.continuousLearning.quote.author}
              </footer>
            </div>
          </div>
        </div>

        <!-- Decorative elements -->
        <div class="absolute -inset-2 -z-10 rounded-3xl bg-gradient-to-br from-primary/5 to-secondary/5 blur-xl"></div>

        <!-- Corner accents -->
        <div class="absolute -left-2 -top-2 h-8 w-8 rounded-full bg-gradient-to-br from-primary/20 to-transparent"></div>
        <div class="absolute -bottom-2 -right-2 h-12 w-12 rounded-full bg-gradient-to-tl from-secondary/20 to-transparent"></div>
        <div class="absolute top-1/4 -right-4 h-6 w-6 rounded-full bg-gradient-to-tl from-accent/30 to-transparent"></div>
      </div>
    </div>
  </div>
</section>
