---
import Icon from '@/ui/atoms/Icon.astro'

const navItems = [
  { href: '/style-guide/atoms', label: 'Atoms' },
  { href: '/style-guide/molecules', label: 'Molecules' },
  { href: '/style-guide/organisms', label: 'Organisms' },
  { href: '/style-guide/sections', label: 'Sections' },
  { href: '/style-guide/shortcodes-mdx', label: 'Shortcodes MDX' },
]
---

<nav class="bg-base-200 flex flex-wrap items-center justify-center gap-4 p-4">
  {
    navItems.map(item => (
      <a href={item.href} class="btn btn-sm sm:btn-md">
        {item.label}
      </a>
    ))
  }

  <!-- BOUTON DE CHANGEMENT DE THÃˆME -->
  <button id="theme-toggle" class="btn btn-ghost btn-circle">
    <Icon name="sun" id="sun-icon" size={20} class="inline-block" title="Activer le mode clair" />
    <Icon name="moon" id="moon-icon" size={20} class="inline-block hidden" title="Activer le mode sombre" />
  </button>
</nav>

<script>
  import '@/utils/toggleDark'
</script>
