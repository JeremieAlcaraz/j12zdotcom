---
// Composant Halo pour effet d'arri√®re-plan
---

<div class="halo-effect">
  <svg width="400" height="400" viewBox="0 0 400 400" class="w-full h-full">
    <defs>
      <!-- Gradients pour les halos -->
      <radialGradient id="pinkHalo" cx="50%" cy="50%" r="50%">
        <stop offset="0%" style="stop-color:#ff69b4;stop-opacity:0.6"></stop>
        <stop offset="40%" style="stop-color:#ff1493;stop-opacity:0.3"></stop>
        <stop offset="70%" style="stop-color:#c71585;stop-opacity:0.15"></stop>
        <stop offset="100%" style="stop-color:#8b008b;stop-opacity:0"></stop>
      </radialGradient>

      <radialGradient id="blueHalo" cx="50%" cy="50%" r="50%">
        <stop offset="0%" style="stop-color:#00bfff;stop-opacity:0.6"></stop>
        <stop offset="40%" style="stop-color:#0080ff;stop-opacity:0.3"></stop>
        <stop offset="70%" style="stop-color:#0040ff;stop-opacity:0.15"></stop>
        <stop offset="100%" style="stop-color:#0020aa;stop-opacity:0"></stop>
      </radialGradient>

      <!-- Filtre de flou pour effet doux -->
      <filter id="glow">
        <feGaussianBlur stdDeviation="4" result="coloredBlur"></feGaussianBlur>
        <feMerge>
          <feMergeNode in="coloredBlur"></feMergeNode>
          <feMergeNode in="SourceGraphic"></feMergeNode>
        </feMerge>
      </filter>
    </defs>

    <!-- Halo rose principal -->
    <circle cx="200" cy="200" r="140" fill="url(#pinkHalo)" filter="url(#glow)">
      <animateTransform
        attributeName="transform"
        attributeType="XML"
        type="scale"
        values="1;1.2;1"
        dur="6s"
        repeatCount="indefinite"></animateTransform>
      <animate attributeName="opacity" values="0.4;0.7;0.4" dur="6s" repeatCount="indefinite"
      ></animate>
    </circle>

    <!-- Halo bleu secondaire -->
    <circle cx="200" cy="200" r="100" fill="url(#blueHalo)" filter="url(#glow)">
      <animateTransform
        attributeName="transform"
        attributeType="XML"
        type="scale"
        values="1.1;0.9;1.1"
        dur="4s"
        repeatCount="indefinite"></animateTransform>
      <animate attributeName="opacity" values="0.6;0.3;0.6" dur="4s" repeatCount="indefinite"
      ></animate>
    </circle>

    <!-- Particules roses -->
    <circle cx="200" cy="200" r="3" fill="#ff69b4" opacity="0.5">
      <animateTransform
        attributeName="transform"
        attributeType="XML"
        type="rotate"
        values="0 200 200;360 200 200"
        dur="12s"
        repeatCount="indefinite"></animateTransform>
      <animateTransform
        attributeName="transform"
        attributeType="XML"
        type="translate"
        values="0,0;70,0;0,0"
        dur="3s"
        repeatCount="indefinite"
        additive="sum"></animateTransform>
    </circle>

    <!-- Particules bleues -->
    <circle cx="200" cy="200" r="2" fill="#00bfff" opacity="0.6">
      <animateTransform
        attributeName="transform"
        attributeType="XML"
        type="rotate"
        values="180 200 200;540 200 200"
        dur="8s"
        repeatCount="indefinite"></animateTransform>
      <animateTransform
        attributeName="transform"
        attributeType="XML"
        type="translate"
        values="0,0;-50,0;0,0"
        dur="2s"
        repeatCount="indefinite"
        additive="sum"></animateTransform>
    </circle>

    <!-- Halo externe pulsant -->
    <circle
      cx="200"
      cy="200"
      r="160"
      fill="none"
      stroke="url(#pinkHalo)"
      stroke-width="1"
      opacity="0.2"
    >
      <animate attributeName="r" values="160;180;160" dur="8s" repeatCount="indefinite"></animate>
      <animate attributeName="opacity" values="0.2;0.05;0.2" dur="8s" repeatCount="indefinite"
      ></animate>
    </circle>
  </svg>
</div>

<style>
  .halo-effect {
    width: 100%;
    height: 100%;
    max-width: 500px;
    max-height: 500px;
    opacity: 0.8;
  }
</style>
