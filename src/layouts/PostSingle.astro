
---
import dateFormat from "@/utils/dateFormat";
import { humanize, markdownify, slugify } from "@/utils/textConverter";
import { render } from "astro:content";
import { FaRegClock, FaRegFolder, FaRegUserCircle } from "react-icons/fa";
import ImageMod from "@components/common/ImageMod/ImageMod.astro";

const { post } = Astro.props;

// === LOGS DE D√âBOGAGE ===
console.log('=== DEBUG PostSingle ===');
console.log('Post received in PostSingle:', !!post);
console.log('Post data keys:', Object.keys(post?.data || {}));
console.log('Title from PostSingle:', post?.data?.title);

// Test du rendu du contenu

const { Content } = await render(post);


const { title, description, author, categories, image, date, tags } = post.data;
console.log('Destructured values:', { 
  title, 
  author, 
  categories: categories?.length,
  image,
  date,
  tags: tags?.length 
});
---

<section class="section pt-7">
  <div class="container">
    <!-- TEST DE D√âBOGAGE - SUPPRIMEZ APR√àS -->
    <div style="border: 3px solid red; padding: 20px; margin: 20px 0; background: yellow;">
      <h1>üîç DEBUG: PostSingle charg√©</h1>
      <p><strong>Post ID:</strong> {post?.id}</p>
      <p><strong>Post Title:</strong> {post?.data?.title}</p>
      <p><strong>Author:</strong> {post?.data?.author}</p>
      <p><strong>Categories:</strong> {post?.data?.categories?.join(', ')}</p>
      <p><strong>Image:</strong> {post?.data?.image}</p>
    </div>
    
    <div class="row justify-center">
      <article class="lg:col-10">
        {
          image && (
            <div class="mb-10">
              <ImageMod
                src={image}
                height={500}
                width={1200}
                alt={title}
                class="w-full rounded"
                format="webp"
              />
            </div>
          )
        }
        <h1 set:html={markdownify(title)} class="h2 mb-4" />
        <ul class="mb-4">
          <li class="mr-4 inline-block">
            <a href={`/authors/${slugify(author)}`}>
              <FaRegUserCircle className={"mr-2 -mt-1 inline-block"} />
              {humanize(author)}
            </a>
          </li>
          <li class="mr-4 inline-block">
            <FaRegFolder className={"mr-2 -mt-1 inline-block"} />
            {
              categories.map((category: string, index: number) => (
                <a href={`/categories/${slugify(category)}`}>
                  {humanize(category)}
                  {index !== categories.length - 1 && ","}
                </a>
              ))
            }
          </li>
          <li class="mr-4 inline-block">
            <FaRegClock className={"mr-2 -mt-1 inline-block"} />
            {dateFormat(date)}
          </li>
        </ul>
        
        <!-- TEST DU CONTENU -->
        <div style="border: 2px solid blue; padding: 10px; margin: 10px 0;">
          <h3>üîç DEBUG: Contenu markdown</h3>
          <div class="content mb-10">
            <Content />
          </div>
        </div>
        
        <!-- Tags section -->
        <div class="row items-start justify-between">
          <div class="mb-10 flex items-center lg:col-5 lg:mb-0">
            <h5 class="mr-3">Tags :</h5>
            <ul>
              {
                tags && tags.map((tag: string) => (
                  <li class="inline-block">
                    <a
                      class="m-1 block rounded bg-light px-3 py-1 hover:bg-primary hover:text-white dark:bg-darkmode-light dark:hover:bg-darkmode-primary dark:hover:text-text-dark"
                      href={`/tags/${slugify(tag)}`}
                    >
                      {humanize(tag)}
                    </a>
                  </li>
                ))
              }
            </ul>
          </div>
        </div>
      </article>
    </div>
  </div>
</section>

