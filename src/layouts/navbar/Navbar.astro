---
/* ------------------------------------------------------------------
   Navbar.astro  (path: src/layouts/navbar/Navbar.astro)
   ------------------------------------------------------------------
   - Structure globale de la barre d’en-tête
   - S’appuie sur 3 sous-composants :
       • ThemeToggle       → bouton soleil / lune
       • NavLinks          → <ul><li> desktop
       • MobileMenu        → dropdown mobile (utilise NavLinks)
   - Les données (logo + liens) proviennent de config/navigation.ts
------------------------------------------------------------------- */
import astroLogo from '@assets/astro.svg';
import { defaultLogo, defaultLinks } from '@config/navigation';
import ThemeToggle from '@components/ui/ThemeToggle.astro';
import NavLinks from '@components/ui/NavLinks.astro';
import MobileMenu from '@components/ui/MobileMenu.astro';
import type { NavbarProps, NavLink } from './Navbar.types';

const { logo = defaultLogo, links = defaultLinks } = Astro.props as NavbarProps;
---

<nav class="navbar bg-base-100 shadow-md">
  <!-- Logo + titre -->
  <div class="navbar-start">
    <a href="/" class="btn btn-ghost text-xl normal-case">
      <img src={logo} alt="Logo" class="h-8 w-8" />
      <span class="hidden sm:inline ml-2">MonSite</span>
    </a>
  </div>

  <!-- Liens desktop -->
  <div class="navbar-center hidden lg:flex">
    <NavLinks links={links} layout="desktop" />
  </div>

  <!-- Thème + menu mobile -->
  <div class="navbar-end">
    <ThemeToggle />
    <MobileMenu links={links as NavLink[]} />
  </div>
</nav>
