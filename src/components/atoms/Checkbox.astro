---
import type { InputHTMLAttributes } from "astro/types";

type Props = {
  size?: "xs" | "sm" | "md" | "lg" | "xl";
  color?:
    | "primary"
    | "secondary"
    | "accent"
    | "neutral"
    | "success"
    | "warning"
    | "info"
    | "error";
} & InputHTMLAttributes<"input">;

const { size, color, class: className, ...rest } = Astro.props;

const classes = [
  "checkbox",
  size && `checkbox-${size}`,
  color && `checkbox-${color}`,
  className,
]
  .filter(Boolean)
  .join(" ");
---

<input type="checkbox" class={classes} {...rest} />