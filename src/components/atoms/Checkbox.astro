---
import type { JSX } from 'astro/jsx-runtime'

type Props = {
  size?: 'xs' | 'sm' | 'md' | 'lg' | 'xl'
  color?: 'primary' | 'secondary' | 'accent' | 'neutral' | 'success' | 'warning' | 'info' | 'error'
} & JSX.InputHTMLAttributes

const { size, color, class: className, ...rest } = Astro.props

const classes = ['checkbox', size && `checkbox-${size}`, color && `checkbox-${color}`, className]
  .filter(Boolean)
  .join(' ')
---

<input type="checkbox" class={classes} {...rest} />
