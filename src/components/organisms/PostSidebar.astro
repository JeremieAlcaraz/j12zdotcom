---
interface Props {
  categories: string[]
  allCategories: string[]
}

const { categories, allCategories } = Astro.props
---

<aside class="w-full">
  <div class="bg-base-100 rounded-lg p-6 shadow-lg">
    <h3 class="mb-4 text-lg font-semibold">Cat√©gories</h3>
    <ul class="space-y-2">
      {
        categories.map(category => {
          const count = allCategories.filter(c => c === category).length
          return (
            <li>
              <a
                href={`/categories/${category}`}
                class="bg-base-200 text-base-content hover:bg-base-300 flex justify-between rounded px-3 py-2 text-sm font-medium capitalize transition-colors"
              >
                {category} <span class="text-base-content/60">({count})</span>
              </a>
            </li>
          )
        })
      }
    </ul>
  </div>
</aside>
