---
/// <reference types="astro/client" />
import Raw from '@/assets/icons/moon-icon.svg';

export interface Props extends astroHTML.JSX.SVGAttributes {
  class?: string;
  title?: string;
}

const { class: className = '', title, ...rest } = Astro.props;
const classes = `w-4 h-4 fill-current ${className}`.trim();
---

<Raw
  class={classes}
  aria-hidden={title ? undefined : 'true'}
  role="img"
  {...title && { title }}
  {...rest}
/>
