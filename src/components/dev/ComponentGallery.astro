---
import Section from '@/components/atoms/Section.astro'

type ComponentFactory = (
  result: unknown,
  props: Record<string, unknown>,
  slots: Record<string, unknown>
) => unknown

interface ExtraComponent {
  name: string
  Component: ComponentFactory
  props?: Record<string, unknown>
  clientLoad?: boolean
  path?: string
}

interface Props {
  modules: Record<string, { default: ComponentFactory }>
  demoProps?: Record<string, Record<string, unknown>>
  clientLoad?: string[]
  exclude?: string[]
  extra?: ExtraComponent[]
}

const {
  modules,
  demoProps = {},
  clientLoad = [],
  exclude = [],
  extra = [],
}: Props = Astro.props

const autoComponents = Object.keys(modules)
  .map((path) => {
    const mod = modules[path]
    const name =
      path
        .split('/')
        .pop()
        ?.replace(/\.(astro|tsx|jsx|svelte)$/i, '') ?? ''
    return {
      name,
      Component: mod.default,
      props: demoProps[name] ?? {},
      clientLoad: clientLoad.includes(name),
      path,
    }
  })
  .filter(({ name }) => name && !exclude.includes(name))
  .sort((a, b) => a.name.localeCompare(b.name))

const components = [...autoComponents, ...extra]
---

{
  components.map(({ name, Component, props, clientLoad, path }) => (
    <Section class="flex flex-col items-start">
      <h2 class="mb-8 text-3xl font-bold">{name}</h2>
      <div class="flex flex-col items-start gap-4">
        <Component
          {...props}
          {...(clientLoad
            ? {
                'client:load': '',
                'client:component-path': path,
                'client:component-export': 'default',
              }
            : {})}
        />
      </div>
    </Section>
  ))
}
