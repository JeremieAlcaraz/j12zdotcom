---
/**
 * Composant LumaCalendar
 * Affiche un calendrier Luma embarqu√© via iframe
 *
 * @param {string} calendarId - ID du calendrier Luma (ex: 'cal-Ocr3w6Nc4xGsrHH')
 * @param {string} [title] - Titre optionnel pour SEO/accessibilit√©
 */
interface Props {
  calendarId: string
  title?: string
}

const { calendarId, title = 'Calendrier Luma' } = Astro.props
const embedUrl = `https://luma.com/embed/calendar/${calendarId}/events`
---

<div class="luma-calendar-wrapper">
  <iframe
    src={embedUrl}
    title={title}
    width="100%"
    height="100%"
    frameborder="0"
    style="border: none;"
    allowfullscreen
    aria-hidden="false"
    tabindex="0"
  ></iframe>

  <!-- Coins d√©coratifs avec emojis -->
  <div class="corner-decoration top-right" aria-hidden="true">
    ‚ú®
  </div>
  <div class="corner-decoration bottom-left" aria-hidden="true">
    üé®
  </div>
</div>

<style>
  .luma-calendar-wrapper {
    width: 100%;
    height: 100%;
    display: flex;
    flex-direction: column;
    min-height: 0; /* Important pour le comportement flexbox */
    position: relative; /* Pour permettre le positionnement absolu des overlays */
  }

  iframe {
    flex: 1;
    min-height: 0; /* Important pour flexbox */
  }

  /* Coins d√©coratifs */
  .corner-decoration {
    position: absolute;
    font-size: 4rem; /* Gros emojis */
    pointer-events: none; /* Ne bloque pas les clics sur l'iframe */
    user-select: none; /* Non s√©lectionnable */
    z-index: 10; /* Au-dessus de l'iframe */
    opacity: 0.8;
    transition: all 0.3s ease;
  }

  /* Position coin haut-droite */
  .corner-decoration.top-right {
    top: 1rem;
    right: 1rem;
  }

  /* Position coin bas-gauche */
  .corner-decoration.bottom-left {
    bottom: 1rem;
    left: 1rem;
  }

  /* Effet hover l√©ger */
  .luma-calendar-wrapper:hover .corner-decoration {
    opacity: 1;
    transform: scale(1.1);
  }
</style>
