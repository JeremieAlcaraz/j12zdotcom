---
// Reusable Section wrapper to apply consistent margins and borders
interface Props {
  class?: string
  name?: string
}
const { class: className = '', name } = Astro.props
---

<section class={`section mt-16 mb-12 p-4 ${className}`.trim()}>
  {name && <h2 class="mb-4 text-2xl font-bold">{name}</h2>}
  <slot />
</section>
