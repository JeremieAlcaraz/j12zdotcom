---
import StyleGuideLayout from '@/domain/style-guide/layouts/StyleGuideLayout.astro'
import Section from '@/ui/atoms/Section.astro'
import Divider from '@/ui/atoms/Divider.astro'
import Accordion from '@/ui/molecules/Accordion.astro'
import Loading from '@/ui/molecules/Loading.astro'
import Pagination from '@/ui/molecules/Pagination.astro'
import { makePaginationLinks } from '@/utils/pagination'
import FabSpeedDial from '@/ui/molecules/FabSpeedDial.astro'
import MusicPlayer from '@/ui/molecules/MusicPlayer.astro'

const { pages, prev, next } = makePaginationLinks('blog', 1, 5)
---

<StyleGuideLayout title="Style Guide | Molecules">
  <Section>
    <div id="accordion" class="scroll-mt-[5rem]">
      <Divider variant="default" label="Accordion" />
    </div>
    <h2 class="sr-only">Accordion</h2>
    <div class="grid grid-cols-1 gap-4">
      <Accordion title="Variante par défaut (flèche)" groupName="demo" open={true}>
        <p>Contenu de démonstration pour l'accordion par défaut avec icône flèche.</p>
      </Accordion>

      <Accordion title="Variante avec icône plus" variant="plus" groupName="demo">
        <p>Ce contenu utilise l'icône plus au lieu de la flèche.</p>
      </Accordion>

      <Accordion title="Variante colorée (info)" color="info" groupName="demo">
        <p>Accordéon avec couleur info pour un style informatif.</p>
      </Accordion>

      <Accordion title="Variante combinée (plus + warning)" variant="plus" color="warning" groupName="demo">
        <p>Combinaison d'icône plus et couleur warning pour alertes.</p>
      </Accordion>

      <Accordion title="Accordion Secondaire" color="secondary" groupName="demo">
        <p>Un accordéon avec la couleur secondaire.</p>
      </Accordion>

      <Accordion title="Accordion Succès" color="success" groupName="demo">
        <p>Parfait pour les messages de succès.</p>
      </Accordion>
    </div>
  </Section>

  <Section>
    <div id="loading" class="scroll-mt-[5rem]">
      <Divider variant="default" label="Loading" />
    </div>
    <h2 class="sr-only">Loading</h2>
    <div class="grid grid-cols-1 gap-4">
      <Loading text="Chargement..." />
    </div>
  </Section>

  <Section>
    <div id="pagination" class="scroll-mt-[5rem]">
      <Divider variant="default" label="Pagination" />
    </div>
    <h2 class="sr-only">Pagination</h2>
    <div class="grid grid-cols-1 gap-4">
      <Pagination pages={pages} prev={prev} next={next} />
    </div>
  </Section>

  <Section class="relative">
    <div id="fab" class="scroll-mt-[5rem]">
      <Divider variant="default" label="FAB / Speed Dial" />
    </div>
    <h2 class="sr-only">FAB / Speed Dial</h2>
    <!-- The FAB is now positioned relative to this section -->
    <FabSpeedDial position="absolute" />
    <div class="min-h-[50vh] bg-base-300 flex items-center justify-center">
      <p class="text-muted">Zone de démonstration pour visualiser le positionnement du FAB en bas à droite de la section.</p>
    </div>
  </Section>

  <Section>
    <div id="music-player" class="scroll-mt-[5rem]">
      <Divider variant="default" label="Music Player" />
    </div>
    <h2 class="sr-only">Music Player</h2>
    <div class="grid grid-cols-1 gap-4">
      <MusicPlayer />
    </div>
  </Section>
</StyleGuideLayout>
