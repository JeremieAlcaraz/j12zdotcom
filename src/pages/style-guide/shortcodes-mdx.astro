import Accordion from '@/ui/molecules/Accordion.astro'
import Button from '@/ui/atoms/Button.astro'
import Notice from '@/ui/atoms/Notice.astro'
import Video from '@/ui/atoms/Video.astro'
import Youtube from '@/ui/atoms/Youtube.astro'
---

<StyleGuideLayout title="Style Guide | Shortcodes MDX">
  <!-- Accordion (shortcode equivalent) -->
  <Section>
    <Divider variant="default" label="Accordion" />
