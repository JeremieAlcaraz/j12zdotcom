  </Section>

  <!-- Notice (shortcode equivalent) -->
  <Section>
    <Divider variant="default" label="Notice" />
    <h2 class="sr-only">Notice</h2>
    <div class="flex flex-col gap-3">
      <Notice type="tip">Une petite astuce.</Notice>
      <Notice type="info">Une info utile.</Notice>
    </div>
  </Section>

  <!-- Video & Youtube (shortcode equivalent) -->
  <Section>
    <Divider variant="default" label="Video & Youtube" />
    <h2 class="sr-only">Video & Youtube</h2>
    <div class="grid grid-cols-1 gap-6">
      <Video title="Sample" src="https://www.w3schools.com/html/mov_bbb.mp4" width={320} height={240} />
