---
import StyleGuideLayout from '@/layouts/StyleGuideLayout.astro'
import ComponentGallery from '@/components/dev/ComponentGallery.astro'

const modules = import.meta.glob('@/components/shortcodes/*.tsx', { eager: true })

const demoProps = {
  Accordion: { title: 'Titre', children: "Contenu de l'accord√©on." },
  Button: { label: 'Visiter Astro', link: 'https://astro.build' },
  Notice: { type: 'tip', children: 'Une petite astuce.' },
  Video: {
    title: 'Sample',
    src: 'https://www.w3schools.com/html/mov_bbb.mp4',
    width: 320,
    height: 240,
  },
  Youtube: { id: 'dQw4w9WgXcQ', title: 'YouTube', style: { maxWidth: '560px' } },
}

const clientLoad = ['Accordion', 'Button', 'Notice', 'Video', 'Youtube']
---

<StyleGuideLayout title="Style Guide | Shortcodes MDX">
  <ComponentGallery
    modules={modules}
    demoProps={demoProps}
    clientLoad={clientLoad}
    exclude={['Tab', 'Tabs']}
  />
</StyleGuideLayout>
