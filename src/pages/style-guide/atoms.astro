---
import StyleGuideLayout from '@/layouts/StyleGuideLayout.astro'
import ComponentGallery from '@/components/dev/ComponentGallery.astro'

const modules = import.meta.glob('@/components/atoms/**/*.astro', { eager: true })

const demoProps = {
  ImageMod: {
    src: 'img_opt/jeremie-hero.png',
    alt: 'Jérémie',
    width: 400,
    height: 400,
  },
  Avatar: {
    src: 'img_opt/jeremie-hero.png',
    alt: 'Jérémie',
    size: 80,
  },
  Badge: { label: 'New' },
}
---

<StyleGuideLayout title="Style Guide | Atoms">
  <ComponentGallery modules={modules} demoProps={demoProps} exclude={['Section']} />
</StyleGuideLayout>
