---
import StyleGuideLayout from '@/domain/style-guide/layouts/StyleGuideLayout.astro'
import ComponentGallery from '@/domain/dev/ComponentGallery.astro'
import Loading from '@/ui/atoms/Loader.astro'
import Checkbox from '@/ui/atoms/Checkbox.astro'
import Section from '@/ui/atoms/Section.astro'
import Icon from '@/ui/atoms/Icon.astro'

const modules = import.meta.glob('@/ui/atoms/**/*.astro', { eager: true })

const demoProps = {
  ImageMod: {
    src: 'img_opt/jeremie-hero.png',
    alt: 'Jérémie',
    width: 400,
    height: 400,
  },
  Avatar: {
    src: 'img_opt/jeremie-hero.png',
    alt: 'Jérémie',
    size: 80,
  },
  Badge: { label: 'New' },
  Alert: [
    { tone: 'info', children: 'Information alert' },
    { tone: 'success', children: 'All good!' },
    { tone: 'warning', children: 'Heads up!' },
    { tone: 'error', children: 'Something went wrong' },
  ],
  Icon: { name: 'cat', size: 24, class: 'text-primary', title: 'Chat mignon' },
}

const loadingVariants = ['spinner', 'dots', 'ring', 'ball', 'bars', 'infinity'] as const
const itemSizes = ['xs', 'sm', 'md', 'lg', 'xl'] as const
const itemColors = [
  'primary',
  'secondary',
  'accent',
  'neutral',
  'info',
  'success',
  'warning',
  'error',
] as const
---

<StyleGuideLayout title="Style Guide | Atoms">
  <ComponentGallery
    modules={modules}
    demoProps={demoProps}
    exclude={['Section', 'Loading', 'Checkbox', 'Icon']}
  />

  <Section name="Loading">
    <div class="grid grid-cols-1 gap-4">
      <div>
        <h3 class="mb-2 text-lg font-bold">Variants</h3>
        <div class="flex flex-wrap items-center gap-4">
          {loadingVariants.map(variant => <Loading variant={variant} />)}
        </div>
      </div>
      <div>
        <h3 class="mb-2 text-lg font-bold">Sizes</h3>
        <div class="flex flex-wrap items-center gap-4">
          {itemSizes.map(size => <Loading size={size} />)}
        </div>
      </div>
      <div>
        <h3 class="mb-2 text-lg font-bold">Colors</h3>
        <div class="flex flex-wrap items-center gap-4">
          {itemColors.map(color => <Loading color={color} />)}
        </div>
      </div>
    </div>
  </Section>

  <Section name="Checkbox">
    <div class="grid grid-cols-1 gap-4">
      <div>
        <h3 class="mb-2 text-lg font-bold">Sizes</h3>
        <div class="flex flex-wrap items-center gap-4">
          {itemSizes.map(size => <Checkbox size={size} checked />)}
        </div>
      </div>
      <div>
        <h3 class="mb-2 text-lg font-bold">Colors</h3>
        <div class="flex flex-wrap items-center gap-4">
          {itemColors.map(color => <Checkbox color={color} checked />)}
        </div>
      </div>
      <div>
        <h3 class="mb-2 text-lg font-bold">States</h3>
        <div class="flex flex-wrap items-center gap-4">
          <Checkbox checked />
          <Checkbox disabled />
        </div>
      </div>
    </div>
  </Section>

  <Section name="Icon">
    <div class="grid grid-cols-1 gap-4">
      <Icon name="sun" id="sun-icon" size={20} class="inline-block" title="Activer le mode clair" />
      <Icon name="cat" id="cat-icon" size={20} class="inline-block" title="Activer le mode clair" />
      <Icon name="music" id="music-icon" size={20} class="inline-block" title="Activer le mode clair" />
      <div>
        <h3 class="mb-2 text-lg font-bold">Icônes disponibles</h3>
        <div class="flex flex-wrap items-center gap-4">
          <Icon name="cat" id="cat-icon" size={20}  class="text-base-content" title="Chat" />
          <Icon name="cat" id="cat-icon" size={20} class="inline-block" title="Activer le mode clair" />
          <Icon name="music" size={20}  class="text-base-content" title="Musique" />
          <Icon name="sun" size="24" class="text-base-content" title="Soleil" />
          <Icon name="moon" size="24" class="text-base-content" title="Lune" />
          <Icon name="chevron-left" size="24" class="text-base-content" title="Précédent" />
          <Icon name="chevron-right" size="24" class="text-base-content" title="Suivant" />
        </div>
      </div>
      <div>
        <h3 class="mb-2 text-lg font-bold">Tailles</h3>
        <div class="flex flex-wrap items-center gap-4">
          <Icon name="cat" size="16" class="text-base-content" title="Petit" />
          <Icon name="cat" size="20" class="text-base-content" title="Moyen" />
          <Icon name="cat" size="24" class="text-base-content" title="Normal" />
          <Icon name="cat" size="32" class="text-base-content" title="Grand" />
          <Icon name="cat" size="48" class="text-base-content" title="Très grand" />
        </div>
      </div>
      <div>
        <h3 class="mb-2 text-lg font-bold">Couleurs</h3>
        <div class="flex flex-wrap items-center gap-4">
          <Icon name="music" size="24" class="text-primary" title="Primaire" />
          <Icon name="music" size="24" class="text-secondary" title="Secondaire" />
          <Icon name="music" size="24" class="text-accent" title="Accent" />
          <Icon name="music" size="24" class="text-info" title="Info" />
          <Icon name="music" size="24" class="text-success" title="Succès" />
          <Icon name="music" size="24" class="text-warning" title="Attention" />
          <Icon name="music" size="24" class="text-error" title="Erreur" />
        </div>
      </div>
    </div>
  </Section>
</StyleGuideLayout>
