---
// src/pages/index.astro

import Layout from '@layouts/BaseLayout.astro';
import Hero from '@components/Hero.astro';
---

<Layout title="Accueil - Mon Site">
  <!-- ====================================== -->
  <!-- 1) HERO : full-width via slot="hero" -->
  <!-- ====================================== -->
  <!-- on passe le nav via slot nommé -->
  <Hero slot="hero" />

  <!-- ====================================== -->
  <!-- 2) CONTENU : centré dans container     -->
  <!--    Section principale de la page      -->
  <!-- ====================================== -->
  <section class="py-16">
    <h2 class="text-3xl font-semibold mb-4">Box Office News!</h2>
    <p class="mb-6">Provident cupiditate voluptatem et in. Quaerat fugiat ut assumenda…</p>
    <button class="btn btn-primary">Get Started</button>
  </section>

  <!-- ====================================== -->
  <!-- 3) AUTRE SECTION : centré             -->
  <!--      Exemple d'une section supplémentaire -->
  <!-- ====================================== -->
  <section class="py-16">
    <h2 class="text-2xl font-semibold mb-4">Une autre section</h2>
    <p>…ton contenu centré ici…</p>
  </section>
</Layout>
