{
  "extends": "astro/tsconfigs/strict",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@assets/*": ["src/assets/*"],
      "@utils/*": ["src/utils/*"],
      "@types/*": ["src/types/*"],
      "@playground/*": ["src/playground/*"],
      "@styles/*": ["src/styles/*"],
      "@/*": ["./src/*"]
    }
  },
  "include": [
    ".astro/types.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "**/*.astro",
    "**/*.d.ts"
  ],
  "exclude": ["dist", "node_modules"]
}
