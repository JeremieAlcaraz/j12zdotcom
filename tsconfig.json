{
  "extends": "astro/tsconfigs/strict",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@assets/*": ["src/assets/*"],
      "@utils/*": ["src/utils/*"],
      "@types/*": ["src/types/*"],
      "@playground/*": ["src/playground/*"],
      "@styles/*": ["src/styles/*"],
      "@ui/*": ["src/components/ui/*"],
      "@domain/*": ["src/components/domain/*"],
      "@sections/*": ["src/components/sections/*"],
      "@layouts/*": ["src/layouts/*"],
      "@/*": ["./src/*"]
    }
  },
  "include": [".astro/types.d.ts", "**/*.ts", "**/*.tsx", "**/*.astro"],
  "exclude": ["dist", "node_modules"]
}
